CREATE TABLE users (id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL UNIQUE, username VARCHAR UNIQUE NOT NULL);
CREATE TABLE leaderboard_score (id INTEGER REFERENCES users (id) NOT NULL, score INTEGER NOT NULL, date_high_score TIME NOT NULL);
CREATE TABLE questions (question_id INTEGER PRIMARY KEY AUTOINCREMENT UNIQUE NOT NULL, question VARCHAR (255) NOT NULL);
CREATE TABLE answers (question_id REFERENCES questions (question_id) NOT NULL UNIQUE, answers_a VARCHAR (255) NOT NULL, 
answers_b VARCHAR (255) NOT NULL, answers_c VARCHAR (255) NOT NULL, answers_d VARCHAR (255) NOT NULL, isCorrect BOOLEAN NOT NULL);